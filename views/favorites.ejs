<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Favorites</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h3 class="mb-0">YouTube Favorites</h3>
      <% if (user) { %>
        <small class="text-muted">
          Logged in as <b><%= user.fullName %></b> (<%= user.email %>)
        </small>
      <% } %>
    </div>

    <div class="d-flex gap-2">
      <a class="btn btn-outline-primary" href="/">Home</a>
      <form method="POST" action="/logout">
        <button class="btn btn-outline-danger" type="submit">Logout</button>
      </form>
    </div>
  </div>

  <!-- Search top -->
  <div class="card mb-3">
    <div class="card-body">
      <form class="row g-2" method="GET" action="/favorites">
        <div class="col-md-10">
          <input class="form-control" name="q" value="<%= q || '' %>" placeholder="Search YouTube..." />
        </div>
        <div class="col-md-2 d-grid">
          <button class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Info + Error -->
  <p class="text-muted mb-2">
    Query: <b><%= q || '' %></b> |
    Results: <b><%= (results && results.length) ? results.length : 0 %></b>
  </p>

  <% if (error) { %>
    <div class="alert alert-danger">
      <b>YouTube error:</b> <%= error %>
    </div>
  <% } %>

  <% if (results && results.length) { %>
    <h5 class="mb-2">Results</h5>
    <div class="row g-3 mb-4">
      <% results.forEach(v => { %>
        <div class="col-md-4">
          <div class="card h-100">
            <img src="<%= v.thumbnailUrl %>" class="card-img-top" alt="thumbnail" />
            <div class="card-body">
              <div class="fw-semibold mb-2"><%= v.title %></div>

              <form method="POST" action="/favorites/add">
                <input type="hidden" name="videoId" value="<%= v.videoId %>">
                <input type="hidden" name="title" value="<%= v.title %>">
                <input type="hidden" name="thumbnailUrl" value="<%= v.thumbnailUrl %>">
                <button class="btn btn-success w-100">Save to favorites</button>
              </form>

              <a class="btn btn-link p-0 mt-2" target="_blank"
                 href="https://www.youtube.com/watch?v=<%= v.videoId %>">Open</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Favorites bottom -->
  <h5 class="mb-2">My Favorites</h5>

  <% if (!favorites || favorites.length === 0) { %>
    <div class="alert alert-secondary">No favorites yet.</div>
  <% } else { %>
    <div class="list-group">
      <% favorites.forEach(f => { %>
        <div class="list-group-item d-flex align-items-center gap-3">
          <img src="<%= f.thumbnailUrl %>" style="width:120px;border-radius:8px;" alt="thumbnail" />

          <div class="flex-grow-1">
            <div class="fw-semibold"><%= f.title %></div>
            <a target="_blank" href="https://www.youtube.com/watch?v=<%= f.videoId %>">Open</a>
          </div>

          <!-- FIXED: must match routes/controller -->
          <form method="POST" action="/favorites/remove">
            <input type="hidden" name="favoriteId" value="<%= f.id %>">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } %>

</body>
</html>

